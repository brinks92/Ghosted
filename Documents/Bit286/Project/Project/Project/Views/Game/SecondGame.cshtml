@model Project.ViewModels.SecondGameViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SecondGame</title>

    <style>
        body {
            
            background-image: url('../../Images/Game2Background.png'); 
            background-size: contain;
        }

        h4{
            text-align: center;
            margin-bottom: 30px;
            font-size: xx-large;
        }
        .form-group{

            text-align:center;
            display:inline-block;
            font-size: xx-large;
            padding: 25%,25%,25%,25%;
        }

    </style>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>@ViewBag.question</h4>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="@ViewBag.ans1" style="@ViewBag.e" class="btn btn-default" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="@ViewBag.correct" style="@ViewBag.f" class="btn btn-default" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="@ViewBag.answ" style="@ViewBag.e" class="btn btn-default" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="@ViewBag.answ3" style="@ViewBag.e" class="btn btn-default" />
                </div>
            </div>
        </div>

        <div style="@ViewBag.seen">
            @Html.ActionLink("Next Game", "ThirdGame")
        </div>
       
        if (@ViewBag.correct != null)
        {
            <H1>@ViewBag.message</H1>
            <p><img src="~/Images/Pug.jpg" style="@ViewBag.showPic" alt="coins" /></p>
            
        }

    }


    <script>

    </script>
</body>
</html>
